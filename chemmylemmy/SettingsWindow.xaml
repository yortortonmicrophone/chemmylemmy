<Window x:Class="chemmylemmy.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="600" Width="500" 
        WindowStyle="None" AllowsTransparency="True" 
        Background="{DynamicResource ThemeBackgroundBrush}" ResizeMode="NoResize"
        Topmost="True" ShowInTaskbar="False">
    <Window.Resources>
        <SolidColorBrush x:Key="ThemeBackgroundBrush" Color="#FF2A2A2A"/>
        <SolidColorBrush x:Key="ThemeBorderBrush" Color="#FF444444"/>
                <SolidColorBrush x:Key="ThemeTextBrush" Color="#FFF0F0F0"/>
        <SolidColorBrush x:Key="ThemeHighlightBrush" Color="#FFA6E22E"/>
        
        
        <!-- TabControl Style to override default highlighting -->
        <Style x:Key="CustomTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <!-- TabItem Style to override default highlighting -->
        <Style x:Key="CustomTabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource ThemeTextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource ThemeBorderBrush}"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="0">
                            <ContentPresenter x:Name="ContentSite"
                                            ContentSource="Header"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ThemeHighlightBrush}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource ThemeHighlightBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border x:Name="MainBorder" CornerRadius="8" BorderThickness="1" 
            Background="{StaticResource ThemeBackgroundBrush}" 
            BorderBrush="{StaticResource ThemeBorderBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Grid Grid.Row="0" x:Name="TitleBar" 
                  Background="{StaticResource ThemeBorderBrush}" Height="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Settings" 
                           Foreground="{DynamicResource ThemeTextBrush}" FontSize="14" FontWeight="Bold"
                           VerticalAlignment="Center" Margin="10,0,0,0"/>
                
                <Button Grid.Column="1" x:Name="CloseButton" Content="âœ•" Width="30" Height="30"
                        Background="Transparent" Foreground="{DynamicResource ThemeTextBrush}" 
                        BorderThickness="0" FontSize="14" Click="CloseButton_Click"/>
            </Grid>
            
            <!-- Settings Content -->
            <TabControl x:Name="MainTabControl" Grid.Row="1" Background="Transparent" BorderThickness="0" VirtualizingPanel.IsVirtualizing="False"
                        Style="{StaticResource CustomTabControlStyle}">
                <!-- General Settings Tab -->
                <TabItem Header="General" Style="{StaticResource CustomTabItemStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="Transparent">
                        <StackPanel Margin="15">
                            <!-- Hotkey Settings -->
                            <Border CornerRadius="5" 
                                    Background="{StaticResource ThemeBackgroundBrush}" 
                                    Margin="0,0,0,12" Padding="12" 
                                    BorderBrush="{StaticResource ThemeBorderBrush}" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Hotkey Settings" FontSize="14" FontWeight="Bold" 
                                               Foreground="{DynamicResource ThemeTextBrush}" Margin="0,0,0,10"/>
                                    
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="Search Hotkey:" 
                                                   Foreground="{DynamicResource ThemeTextBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        
                                        <TextBox Grid.Column="1" x:Name="HotkeyTextBox" Height="26" 
                                                 Background="Transparent" Foreground="{DynamicResource ThemeTextBrush}" 
                                                 BorderThickness="0" Padding="6,0" IsReadOnly="True"
                                                 Text="Ctrl+Shift+Z" VerticalAlignment="Center"/>
                                        
                                        <Button Grid.Column="2" x:Name="ChangeHotkeyButton" Content="Change" Width="80" Height="26" Margin="10,0,0,0"
                                                Background="{DynamicResource ThemeBorderBrush}" Foreground="{DynamicResource ThemeTextBrush}"
                                                BorderThickness="0" Click="ChangeHotkey_Click"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                            
                            <!-- Display Settings -->
                            <Border CornerRadius="5" 
                                    Background="{StaticResource ThemeBackgroundBrush}" 
                                    Margin="0,0,0,12" Padding="12" 
                                    BorderBrush="{StaticResource ThemeBorderBrush}" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Display Settings" FontSize="14" FontWeight="Bold" 
                                               Foreground="{DynamicResource ThemeTextBrush}" Margin="0,0,0,10"/>
                                    
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="Decimal Places:" 
                                                   Foreground="{DynamicResource ThemeTextBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        
                                        <ComboBox Grid.Column="1" x:Name="DecimalPlacesComboBox" Height="26"
                                                  Background="{DynamicResource ThemeBackgroundBrush}" Foreground="{DynamicResource ThemeTextBrush}"
                                                  BorderBrush="{DynamicResource ThemeBorderBrush}" BorderThickness="1">
                                            <ComboBoxItem Content="2" IsSelected="True"/>
                                            <ComboBoxItem Content="3"/>
                                            <ComboBoxItem Content="4"/>
                                            <ComboBoxItem Content="5"/>
                                        </ComboBox>
                                    </Grid>
                                    
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="Window Scale:" 
                                                   Foreground="{DynamicResource ThemeTextBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        
                                        <ComboBox Grid.Column="1" x:Name="ScaleComboBox" Height="26"
                                                  Background="{DynamicResource ThemeBackgroundBrush}" Foreground="{DynamicResource ThemeTextBrush}"
                                                  BorderBrush="{DynamicResource ThemeBorderBrush}" BorderThickness="1">
                                            <ComboBoxItem Content="100%" IsSelected="True"/>
                                            <ComboBoxItem Content="125%"/>
                                            <ComboBoxItem Content="150%"/>
                                            <ComboBoxItem Content="175%"/>
                                            <ComboBoxItem Content="200%"/>
                                        </ComboBox>
                                    </Grid>
                                    
                                    <CheckBox x:Name="AutoHideCheckBox" Content="Auto-hide on focus loss" 
                                              Foreground="{DynamicResource ThemeTextBrush}" IsChecked="True" Margin="0,5,0,0"/>
                                    <CheckBox x:Name="ShowCopyConfirmationCheckBox" Content="Show copy confirmation" 
                                              Foreground="{DynamicResource ThemeTextBrush}" IsChecked="True" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
                
                <!-- Colors Tab -->
                <TabItem Header="Colors" Style="{StaticResource CustomTabItemStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="Transparent">
                        <StackPanel Margin="15">
                            <!-- Built-in Themes -->
                            <Border CornerRadius="5" 
                                    Background="{StaticResource ThemeBackgroundBrush}" 
                                    Margin="0,0,0,12" Padding="12" 
                                    BorderBrush="{StaticResource ThemeBorderBrush}" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Built-in Themes" FontSize="14" FontWeight="Bold"
                                               Foreground="{DynamicResource ThemeTextBrush}" Margin="0,0,0,10"/>
                                    
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Monokai" Width="80" Height="26" Margin="0,0,5,0"
                                                Background="{DynamicResource ThemeBorderBrush}" Foreground="{DynamicResource ThemeTextBrush}"
                                                BorderThickness="0" FontSize="10" Click="MonokaiTheme_Click"/>
                                        <Button Content="Dracula" Width="80" Height="26" Margin="5,0"
                                                Background="Transparent" Foreground="{DynamicResource ThemeTextBrush}"
                                                BorderBrush="{DynamicResource ThemeBorderBrush}" BorderThickness="1" FontSize="10" Click="DraculaTheme_Click"/>
                                        <Button Content="Solarized" Width="80" Height="26" Margin="5,0"
                                                Background="Transparent" Foreground="{DynamicResource ThemeTextBrush}"
                                                BorderBrush="{DynamicResource ThemeBorderBrush}" BorderThickness="1" FontSize="10" Click="SolarizedTheme_Click"/>
                                        <Button Content="Nord" Width="80" Height="26" Margin="5,0"
                                                Background="Transparent" Foreground="{DynamicResource ThemeTextBrush}"
                                                BorderBrush="{DynamicResource ThemeBorderBrush}" BorderThickness="1" FontSize="10" Click="NordTheme_Click"/>
                                        <Button Content="Gruvbox" Width="80" Height="26" Margin="5,0"
                                                Background="Transparent" Foreground="{DynamicResource ThemeTextBrush}"
                                                BorderBrush="{DynamicResource ThemeBorderBrush}" BorderThickness="1" FontSize="10" Click="GruvboxTheme_Click"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Color Presets -->
                            <Border CornerRadius="5" 
                                    Background="{StaticResource ThemeBackgroundBrush}" 
                                    Margin="0,0,0,12" Padding="12" 
                                    BorderBrush="{StaticResource ThemeBorderBrush}" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Custom Color Presets" FontSize="14" FontWeight="Bold"
                                               Foreground="{DynamicResource ThemeTextBrush}" Margin="0,0,0,10"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Preset 1 -->
                                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                            <TextBlock Text="Preset 1" FontSize="11" FontWeight="Bold"
                                                       Foreground="{DynamicResource ThemeTextBrush}" Margin="0,0,0,5"/>
                                            <TextBox x:Name="Preset1NameTextBox" Height="22" FontSize="10"
                                                     Background="{DynamicResource ThemeBackgroundBrush}" Foreground="{DynamicResource ThemeTextBrush}" BorderBrush="{DynamicResource ThemeBorderBrush}" 
                                                     BorderThickness="1" Margin="0,0,0,5" Text=""/>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Save" Width="40" Height="22" Margin="0,0,2,0"
                                                        Background="{DynamicResource ThemeBorderBrush}" Foreground="{DynamicResource ThemeTextBrush}"
                                                        BorderThickness="0" FontSize="9" Click="SavePreset1_Click"/>
                                                <Button Content="Load" Width="40" Height="22" Margin="2,0,0,0"
                                                        Background="Transparent" Foreground="{DynamicResource ThemeTextBrush}"
                                                        BorderBrush="{DynamicResource ThemeBorderBrush}" BorderThickness="1" FontSize="9" Click="LoadPreset1_Click"/>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <!-- Preset 2 -->
                                        <StackPanel Grid.Column="1" Margin="5,0">
                                            <TextBlock Text="Preset 2" FontSize="11" FontWeight="Bold"
                                                       Foreground="{DynamicResource ThemeTextBrush}" Margin="0,0,0,5"/>
                                            <TextBox x:Name="Preset2NameTextBox" Height="22" FontSize="10"
                                                     Background="{DynamicResource ThemeBackgroundBrush}" Foreground="{DynamicResource ThemeTextBrush}" BorderBrush="{DynamicResource ThemeBorderBrush}" 
                                                     BorderThickness="1" Margin="0,0,0,5" Text=""/>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Save" Width="40" Height="22" Margin="0,0,2,0"
                                                        Background="{DynamicResource ThemeBorderBrush}" Foreground="{DynamicResource ThemeTextBrush}"
                                                        BorderThickness="0" FontSize="9" Click="SavePreset2_Click"/>
                                                <Button Content="Load" Width="40" Height="22" Margin="2,0,0,0"
                                                        Background="Transparent" Foreground="{DynamicResource ThemeTextBrush}"
                                                        BorderBrush="{DynamicResource ThemeBorderBrush}" BorderThickness="1" FontSize="9" Click="LoadPreset2_Click"/>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <!-- Preset 3 -->
                                        <StackPanel Grid.Column="2" Margin="5,0,0,0">
                                            <TextBlock Text="Preset 3" FontSize="11" FontWeight="Bold"
                                                       Foreground="{DynamicResource ThemeTextBrush}" Margin="0,0,0,5"/>
                                            <TextBox x:Name="Preset3NameTextBox" Height="22" FontSize="10"
                                                     Background="{DynamicResource ThemeBackgroundBrush}" Foreground="{DynamicResource ThemeTextBrush}" BorderBrush="{DynamicResource ThemeBorderBrush}" 
                                                     BorderThickness="1" Margin="0,0,0,5" Text=""/>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Save" Width="40" Height="22" Margin="0,0,2,0"
                                                        Background="{DynamicResource ThemeBorderBrush}" Foreground="{DynamicResource ThemeTextBrush}"
                                                        BorderThickness="0" FontSize="9" Click="SavePreset3_Click"/>
                                                <Button Content="Load" Width="40" Height="22" Margin="2,0,0,0"
                                                        Background="Transparent" Foreground="{DynamicResource ThemeTextBrush}"
                                                        BorderBrush="{DynamicResource ThemeBorderBrush}" BorderThickness="1" FontSize="9" Click="LoadPreset3_Click"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Color Settings Grid -->
                            <Border CornerRadius="5" 
                                    Background="{StaticResource ThemeBackgroundBrush}" 
                                    Margin="0,0,0,12" Padding="12" 
                                    BorderBrush="{StaticResource ThemeBorderBrush}" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Color Settings" FontSize="14" FontWeight="Bold"
                                               Foreground="{DynamicResource ThemeTextBrush}" Margin="0,0,0,10"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Search Box Colors -->
                                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                            <TextBlock Text="Search Box" FontSize="12" FontWeight="Bold"
                                                       Foreground="{DynamicResource ThemeTextBrush}" Margin="0,0,0,5"/>
                                            
                                            <Grid Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Border:" FontSize="10" 
                                                           Foreground="{DynamicResource ThemeTextBrush}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                <TextBox Grid.Column="1" x:Name="SearchBoxBorderColorTextBox" Height="20" FontSize="9"
                                                         Background="{DynamicResource ThemeBackgroundBrush}" Foreground="{DynamicResource ThemeTextBrush}" BorderBrush="{DynamicResource ThemeBorderBrush}" 
                                                         BorderThickness="1" Text="#FF444444"/>
                                            </Grid>
                                            
                                            <Grid Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Text:" FontSize="10" 
                                                           Foreground="{DynamicResource ThemeTextBrush}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                <TextBox Grid.Column="1" x:Name="SearchBoxTextColorTextBox" Height="20" FontSize="9"
                                                         Background="{DynamicResource ThemeBackgroundBrush}" Foreground="{DynamicResource ThemeTextBrush}" BorderBrush="{DynamicResource ThemeBorderBrush}" 
                                                         BorderThickness="1" Text="#FFF0F0F0"/>
                                            </Grid>
                                            
                                            <Grid Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Background:" FontSize="10" 
                                                           Foreground="{DynamicResource ThemeTextBrush}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                <TextBox Grid.Column="1" x:Name="SearchBoxBackgroundColorTextBox" Height="20" FontSize="9"
                                                         Background="{DynamicResource ThemeBackgroundBrush}" Foreground="{DynamicResource ThemeTextBrush}" BorderBrush="{DynamicResource ThemeBorderBrush}" 
                                                         BorderThickness="1" Text="#FF2A2A2A"/>
                                            </Grid>
                                        </StackPanel>
                                        
                                        <!-- Results Box Colors -->
                                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                            <TextBlock Text="Results Box" FontSize="12" FontWeight="Bold"
                                                       Foreground="{DynamicResource ThemeTextBrush}" Margin="0,0,0,5"/>
                                            
                                            <Grid Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Border:" FontSize="10" 
                                                           Foreground="{DynamicResource ThemeTextBrush}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                <TextBox Grid.Column="1" x:Name="ResultsBoxBorderColorTextBox" Height="20" FontSize="9"
                                                         Background="{DynamicResource ThemeBackgroundBrush}" Foreground="{DynamicResource ThemeTextBrush}" BorderBrush="{DynamicResource ThemeBorderBrush}" 
                                                         BorderThickness="1" Text="#FF444444"/>
                                            </Grid>
                                            
                                            <Grid Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Text:" FontSize="10" 
                                                           Foreground="{DynamicResource ThemeTextBrush}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                <TextBox Grid.Column="1" x:Name="ResultsBoxTextColorTextBox" Height="20" FontSize="9"
                                                         Background="{DynamicResource ThemeBackgroundBrush}" Foreground="{DynamicResource ThemeTextBrush}" BorderBrush="{DynamicResource ThemeBorderBrush}" 
                                                         BorderThickness="1" Text="#FFF0F0F0"/>
                                            </Grid>
                                            
                                            <Grid Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Background:" FontSize="10" 
                                                           Foreground="{DynamicResource ThemeTextBrush}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                <TextBox Grid.Column="1" x:Name="ResultsBoxBackgroundColorTextBox" Height="20" FontSize="9"
                                                         Background="{DynamicResource ThemeBackgroundBrush}" Foreground="{DynamicResource ThemeTextBrush}" BorderBrush="{DynamicResource ThemeBorderBrush}" 
                                                         BorderThickness="1" Text="#FF2A2A2A"/>
                                            </Grid>
                                        </StackPanel>
                                    </Grid>
                                    
                                    <!-- Window Colors -->
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Grid Grid.Column="0" Margin="0,0,5,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="Window Border:" FontSize="10" 
                                                       Foreground="{DynamicResource ThemeTextBrush}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBox Grid.Column="1" x:Name="WindowBorderColorTextBox" Height="20" FontSize="9"
                                                     Background="{DynamicResource ThemeBackgroundBrush}" Foreground="{DynamicResource ThemeTextBrush}" BorderBrush="{DynamicResource ThemeBorderBrush}" 
                                                     BorderThickness="1" Text="#FF444444"/>
                                        </Grid>
                                        
                                        <Grid Grid.Column="1" Margin="5,0,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="Window Background:" FontSize="10" 
                                                       Foreground="{DynamicResource ThemeTextBrush}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBox Grid.Column="1" x:Name="WindowBackgroundColorTextBox" Height="20" FontSize="9"
                                                     Background="{DynamicResource ThemeBackgroundBrush}" Foreground="{DynamicResource ThemeTextBrush}" BorderBrush="{DynamicResource ThemeBorderBrush}" 
                                                     BorderThickness="1" Text="#FF222222"/>
                                        </Grid>
                                    </Grid>
                                    
                                    <!-- Highlight Color -->
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Highlight Color:" FontSize="10" 
                                                   Foreground="{DynamicResource ThemeTextBrush}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBox Grid.Column="1" x:Name="HighlightColorTextBox" Height="20" FontSize="9"
                                                 Background="{DynamicResource ThemeBackgroundBrush}" Foreground="{DynamicResource ThemeTextBrush}" BorderBrush="{DynamicResource ThemeBorderBrush}" 
                                                 BorderThickness="1" Text="#FF444444"/>
                                    </Grid>
                                    
                                    <!-- Notification Colors -->
                                    <TextBlock Text="Notification Colors" FontSize="12" FontWeight="Bold"
                                               Foreground="{DynamicResource ThemeTextBrush}" Margin="0,15,0,5"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Grid Grid.Column="0" Margin="0,0,5,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="Background:" FontSize="10" 
                                                       Foreground="{DynamicResource ThemeTextBrush}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBox Grid.Column="1" x:Name="NotificationBackgroundColorTextBox" Height="20" FontSize="9"
                                                     Background="{DynamicResource ThemeBackgroundBrush}" Foreground="{DynamicResource ThemeTextBrush}" BorderBrush="{DynamicResource ThemeBorderBrush}" 
                                                     BorderThickness="1" Text="#FF2A2A2A"/>
                                        </Grid>
                                        
                                        <Grid Grid.Column="1" Margin="5,0,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="Border:" FontSize="10" 
                                                       Foreground="{DynamicResource ThemeTextBrush}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBox Grid.Column="1" x:Name="NotificationBorderColorTextBox" Height="20" FontSize="9"
                                                     Background="{DynamicResource ThemeBackgroundBrush}" Foreground="{DynamicResource ThemeTextBrush}" BorderBrush="{DynamicResource ThemeBorderBrush}" 
                                                     BorderThickness="1" Text="#FF444444"/>
                                        </Grid>
                                    </Grid>
                                    
                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Text:" FontSize="10" 
                                                   Foreground="{DynamicResource ThemeTextBrush}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBox Grid.Column="1" x:Name="NotificationTextColorTextBox" Height="20" FontSize="9"
                                                 Background="{DynamicResource ThemeBackgroundBrush}" Foreground="{DynamicResource ThemeTextBrush}" BorderBrush="{DynamicResource ThemeBorderBrush}" 
                                                 BorderThickness="1" Text="#FFF0F0F0"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
                
                <!-- About Tab -->
                <TabItem Header="About" Style="{StaticResource CustomTabItemStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="Transparent">
                        <StackPanel Margin="15">
                            <!-- App Info -->
                            <Border CornerRadius="5" 
                                    Background="{StaticResource ThemeBackgroundBrush}" 
                                    Margin="0,0,0,12" Padding="15" 
                                    BorderBrush="{StaticResource ThemeBorderBrush}" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="ChemmyLemmy" FontSize="18" FontWeight="Bold" 
                                               Foreground="{DynamicResource ThemeTextBrush}" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock Text="A chemical element lookup tool" FontSize="12" 
                                               Foreground="{DynamicResource ThemeTextBrush}" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                    
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Version:" FontSize="11" FontWeight="Bold"
                                                   Foreground="{DynamicResource ThemeTextBrush}" Margin="0,0,10,0"/>
                                        <TextBlock Grid.Column="1" Text="1.0.0" FontSize="11"
                                                   Foreground="{DynamicResource ThemeTextBrush}"/>
                                    </Grid>
                                    
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Author:" FontSize="11" FontWeight="Bold"
                                                   Foreground="{DynamicResource ThemeTextBrush}" Margin="0,0,10,0"/>
                                        <TextBlock Grid.Column="1" Text="ChemmyLemmy Team" FontSize="11"
                                                   Foreground="{DynamicResource ThemeTextBrush}"/>
                                    </Grid>
                                    
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="License:" FontSize="11" FontWeight="Bold"
                                                   Foreground="{DynamicResource ThemeTextBrush}" Margin="0,0,10,0"/>
                                        <TextBlock Grid.Column="1" Text="MIT License" FontSize="11"
                                                   Foreground="{DynamicResource ThemeTextBrush}"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                            
                            <!-- Features -->
                            <Border CornerRadius="5" 
                                    Background="{StaticResource ThemeBackgroundBrush}" 
                                    Margin="0,0,0,12" Padding="15" 
                                    BorderBrush="{StaticResource ThemeBorderBrush}" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Features" FontSize="14" FontWeight="Bold" 
